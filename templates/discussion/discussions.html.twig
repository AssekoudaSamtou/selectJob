{% for discussion in discussions %}

	{% if utilisateur == "P" %}

		{% if discussion.expediteur.particulier %}
			<li style="width:100%;">
				<div class="msj-rta macro">
					<div class="text text-r">
						<p>{{ discussion.message.contenu }}</p>
						<p><small>9:27 AM</small>{# <small>{{ discussion.message.createdAt }}</small> #}</p>
					</div>
					<div class="avatar" style="padding:0px 0px 0px 10px !important">
						<img class="img-circle" style="width:100%;" src="{{asset('img/user.png')}}">
					</div>
				</div>
			</li>
		{% elseif discussion.expediteur.entreprise %}
			<li style="width:100%">
				<div class="msj macro">
					<div class="avatar">
